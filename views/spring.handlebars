<link rel="stylesheet" href="/css/spring.css">

<section class="individualSpring">

    {{!-- Overview section --}}
    <section class="overview text-center">
        <p class="text1">OVERVIEW</p>

        <section class="box1 d-flex flex-row">
            <div>
                <textarea name="overviewText" id="overviewText" cols="30" rows="10">{{springDescription}}</textarea>

                {{!-- Amenities --}}
                <section class="amenities">
                    <p class="text-center">Amenities</p>
                    <div class="icons d-flex flex-row justify-content-around">

                        {{#each media}}
                        <div class="amenityIcons d-flex justify-content-around">
                            <div class="card" style="width: 4rem; height:50px">
                                <img src={{this}} class="card-img-top" style="width: 100%; height: 100%;"
                                    alt="...">
                            </div>
                            {{/each}}
                        </div>

                </section>
            </div>

            <p class="text1">{{springName}}</p>

            {{!-- Video Player --}}
            <div id="player"></div>
        </section>
    </section>

    {{!-- Gallery --}}
    {{!-- <section class="gallery">
        <p class="text-center">Media Gallery</p>
        {{#each displayMedia}}
        <div class="photos d-flex justify-content-around">
            <div class="card" style="width: 18rem; height:200px">
                <img src={{this.mediaURL}} class="card-img-top" style="width: 100%; height: 100%;" alt="...">
            </div>
            {{/each}}
        </div>
    </section> --}}

    {{!-- Gallery --}}
    <section class="gallery">
        <p class="text-center">Media Gallery</p>
        <div class="photos d-flex justify-content-around align-items-center">
            {{!-- Button forward --}}
            <button class="prev-btn btn btn-info" style="height:40%"><</button>

            <div class="card-container">
                <div class="card" style="width: 18rem; height:200px">
                    {{!-- The URL for the images are stored in displayMedia that comes as a template literal
                    from the homeRoutes--}}
                    <img id="mediaImage" src={{displayMedia.[0].mediaURL}} class="card-img-top"
                        style="width: 100%; height: 100%;" alt="...">
                </div>
            </div>

            {{!-- Button Backward --}}
            <button class="next-btn btn btn-info" style="height:40%">></button>
        </div>
    </section>


    {{!-- Reviews --}}
    <section class="reviews">
        <p class="text-center">Reviews</p>
        <div class="review d-flex justify-content-around">
            <div class="card" style="width: 5rem; height:40px">
                <a href="http:/">Review 1</a>
            </div>
            <div class="card" style="width: 5rem;">
                <a href="http:/">Review 2</a>
            </div>
            <div class="card" style="width: 5rem;">
                <a href="http:/">Review 3</a>
            </div>
        </div>
    </section>

</section>

{{!-- Footer --}}
<footer class="bg-dark d-flex flex-row justify-content-around">
    <p class="pFooter1">Liked this spring? Favorite it! <a href="http://">&#9733;</a></p>
    <div class="bg-dark d-flex flex-row justify-content-right">
        <p class="me-3">Want to leave some feedback?</p>
        <button class="btn btn-warning">Add a review</button>

    </div>
</footer>

<script src="/js/spring.js"></script>