<link rel="stylesheet" href="/css/spring.css">

<!-- Button trigger modal -->

<!-- Modal for review -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h1 class="h4">Rating (0-10)</h1>
        <input type="text" id="Rating">
        <h1 class="h4">Add any of your comments here</h1>
        <input type="text" id="Comments">
        <h1 class="h4">Upload images</h1>
        <input id="fileUpload" multiple="multiple" type="file" name="files">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="addReview" type="button" class="btn btn-primary">Add Review</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="favoriteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{springName}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h1>Are you sure you want to favorite this spring?</h1>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Nope</button>
        <button id="favoriteSpring" type="button" class="btn btn-primary">Yes, I'm sure</button>
      </div>
    </div>
  </div>
</div>

{{!-- Invidual Spring page --}}
<div class="individualSpring d-flex flex-column mt-50">

      <p class="text2 ml-5 mt-5">{{springName}} Overview</p>

      {{!-- First block --}}
      <div class="firstBlock d-flex flex-row">

          <div class="textAmenity" style="width: 50%;">

            {{!-- Text area --}}
              <textarea readonly class="overviewText ml-5" style="width: 80%; height:50%;" name="overviewText" id="overviewText" cols="30" rows="10">{{springDescription}}</textarea>
            
            {{!-- Amenities --}}
              
              {{!-- 
              <div class="amenityClass"> --}}

                  <p class="text2 ml-5 mt-4">Amenities</p>
                  {{!-- <div class="icons d-flex flex-row justify-content-around">

                    {{#each media}}
                    <div class="iconsClass d-flex justify-content-around">
                      <div class="card" style="width: 4rem; height:50px">
                        <img src={{this}} class="card-img-top" style="width: 100%; height: 100%;" alt="...">
                      </div>
                      {{/each}}
                    </div>

                  </div>

              </div> --}}
          </div>

          {{!-- Video Player --}}
          <div id="player" class="youTube" style="width: 50%;"></div>

      </div>

      <p class="text2 ml-5 mt-4">Media Gallery</p>

      {{!-- Second block --}}
      
      <div class="secondBlock">

        <div class="photos d-flex justify-content-around align-items-center">
          {{!-- Button forward --}}
          <button class="prev-btn btn btn-info" style="height:40%"> Prev </button>

              <div class="card-box">
                <div class="cardImage" style="width: 30rem; height:300px">
                  {{!-- The URL for the images are stored in displayMedia that comes as a template literal
                  from the homeRoutes--}}
                  <img id="mediaImage" src={{displayMedia.[0].mediaURL}} class="card-img-top"
                    style="width: 100%; height: 100%;" alt="...">
                </div>
              </div>

          {{!-- Button Backward --}}
          <button class="next-btn btn btn-info" style="height:40%"> Next </button>

        </div>

      </div> 
     

      {{!-- Third block --}}

      <p class="text2 ml-5 mt-4">Reviews</p>

      <div class="reviews">

        <div class="review d-flex" id="reviewGallery">

          {{#each allReviews as | review Index| }}
          <div class="card text-white bg-dark">
            <img class="card-img-top" src={{this.URL}} alt="{{@index}}">

            <div class="card-body">
              <p class="card-text">{{this.reviewText}}</p>
              <button class="btn btn-primary">See Review</button>
            </div>
          </div>


          {{/each}}
        </div>

      </div>

</div>

{{!-- Footer --}}
<footer class="bg-dark d-flex flex-row justify-content-around">
  <p class="h4 text-center align-self-center">Liked this spring? Favorite it! <button id="favoriteButton"
      class="btn btn-primary " data-toggle="modal" data-target="#favoriteModal">&#9733;</button></p>
  <div class="bg-dark d-flex flex-row justify-content-right align-items-center">
    <p class="me-3 h4 text-center">Want to leave some feedback?</p>
    <button id="addAReviewButton" class="btn btn-primary ml-3" data-toggle="modal" data-target="#exampleModal">Add a
      review</button>

  </div>
</footer>


<h1 id="springID">{{springID}}</h1>

<script src="/js/spring.js"></script>