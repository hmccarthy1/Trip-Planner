<link rel="stylesheet" href="/css/spring.css">

<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h1 class="h4">Rating (0-10)</h1>
        <input type="text" id="Rating">
        <h1 class="h4">Add any of your comments here</h1>
        <input type="text" id="Comments">
        <h1 class="h4">Upload images</h1>
        <input id="fileUpload" multiple="multiple" type="file" name="files"  >



      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="addReview" type="button" class="btn btn-primary">Add Review</button>
      </div>
    </div>
  </div>
</div>
<div class="text-center">
  <a href="" class="btn btn-default btn-rounded mb-4" data-toggle="modal" data-target="#modalLoginForm">Launch
    Modal Login Form</a>
</div>

<section class="individualSpring">

    {{!-- Overview section --}}
    <section class="overview text-center">
        <p class="text1">OVERVIEW</p>

        <section class="box1 d-flex flex-row">
            <div>
                <textarea name="overviewText" id="overviewText" cols="30" rows="10">{{springDescription}}</textarea>

                {{!-- Amenities --}}
                <section class="amenities">
                    <p class="text-center">Amenities</p>
                    <div class="icons d-flex flex-row justify-content-around">

                        {{#each media}}
                        <div class="amenityIcons d-flex justify-content-around">
                            <div class="card" style="width: 4rem; height:50px">
                                <img src={{this}} class="card-img-top" style="width: 100%; height: 100%;"
                                    alt="...">
                            </div>
                            {{/each}}
                        </div>

                </section>
            </div>

            <p class="text1">{{springName}}</p>

            {{!-- Video Player --}}
            <div id="player"></div>
        </section>
    </section>

    {{!-- Gallery --}}
